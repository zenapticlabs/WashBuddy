---
import { Image } from 'astro:assets';
import logo from '../assets/logo.svg';
---

<footer class="bg-[#F4F4F4]  py-8">
    <div class="container mx-auto px-6">
      <!-- Footer Top Section -->
      <div class="flex flex-wrap justify-between mb-8">
        <!-- Left: Logo or Text -->
        <div class="w-full md:w-1/3 mb-6 md:mb-0">
          <h2 class="text-3xl font-bold">
            <Image src={logo} format="svg" alt={''} loading="lazy" />
          </h2>
          <p class="mt-2 ">The easiest way to manage your laundry.</p>
        </div>
  
        <!-- Center: Links -->
        <div class="w-full md:w-1/3 mb-6 md:mb-0">
          <h3 class="text-xl font-semibold mb-4">Quick Links</h3>
          <ul class="">
            <li class="mb-2"><a href="#" class="hover:text-blue-400">Home</a></li>
            <li class="mb-2"><a href="#" class="hover:text-blue-400">About Us</a></li>
            <li class="mb-2"><a href="#" class="hover:text-blue-400">Services</a></li>
            <li class="mb-2"><a href="#" class="hover:text-blue-400">Contact</a></li>
          </ul>
        </div>
  
        <!-- Right: Social Media -->
        <div class="w-full md:w-1/3">
          <h3 class="text-xl font-semibold mb-4">Follow Us</h3>
          <div class="flex space-x-4">
            <a href="#" class=" hover:text-blue-400">
              <i class="fab fa-facebook-square text-2xl"></i>
            </a>
            <a href="#" class=" hover:text-blue-400">
              <i class="fab fa-twitter-square text-2xl"></i>
            </a>
            <a href="#" class=" hover:text-blue-400">
              <i class="fab fa-instagram-square text-2xl"></i>
            </a>
            <a href="#" class=" hover:text-blue-400">
              <i class="fab fa-linkedin text-2xl"></i>
            </a>
          </div>
        </div>
      </div>
  
      <!-- Footer Bottom Section -->
      <div class="border-t border-gray-700 pt-6 text-center">
        <p class=" text-sm">
          &copy; {new Date().getFullYear()} WashBuddy. All Rights Reserved.
        </p>
      </div>
    </div>
  </footer>
  