---
import { Image } from "astro:assets";
import brand1 from "../assets/Brand1.svg";
import brand2 from "../assets/Brand2.svg";
import brand3 from "../assets/Brand3.svg";
import brand4 from "../assets/Brand4.svg";
import brand5 from "../assets/Brand5.svg";

const slides = [
  { image: brand1 },
  { image: brand2 },
  { image: brand3 },
  { image: brand4 },
  { image: brand5 },
];
---

<div
  class="flex flex-col item-center h-[434px] max-md:h-[634px] justify-center gap-[50px] text-center mx-auto font-bold text-[35px] text-[#27292C] max-md:text-[28px]"
>
  <p class="w-[70vw] max-md:w-[80vw] mx-auto">
    WashBuddy is your friend to help you find, compare, and save on local car
    washes!
  </p>

  <div
  class="overflow-hidden flex items-center mx-auto bg-white py-2 w-full relative before:absolute before:top-0 before:left-0 before:h-full before:w-[200px] before:bg-gradient-to-r before:from-white before:to-transparent before:z-10 after:absolute after:top-0 after:right-0 after:h-full after:w-[200px] after:bg-gradient-to-l after:from-white after:to-transparent after:z-10 max-md:after:w-[100px] max-md:before:w-[100px]"
  >
    <div class="marquee-content flex gap-[140px] w-max">
      {
        slides
          .map((slide) => (
            <Image
              src={slide.image}
              format="svg"
              alt="Brand logo"
              loading="lazy"
              class="w-auto"
            />
          ))
      }
    </div>
    
  </div>
</div>

<style>
  .marquee-content {
  animation: marquee 10s linear infinite;
  position: relative;
  white-space: nowrap; 
}

@keyframes marquee {
  0% {
    right: -100vw; 
  }
  50% {
    right: 0vw;   
  }
  100% {
    right: 100vw; 
  }
}

</style>
