---
import { Image } from "astro:assets";
import left_car from "../assets/left-car.svg";
import right_car from "../assets/right-car.svg";
import AutoCompleteSearch from "../components/AutoCompleteSearch.jsx";
---

<div class="w-full h-[621px] md:h-[520px]">
  <div class="w-full h-[480px] md:h-[373px] bg-[#f7fcff]">
    <div
      class="relative md:flex md:items-center md:justify-between w-full h-[480px] md:h-[373px] bg-[url('../assets/bg_dots.svg')] bg-no-repeat bg-cover bg-center"
    >
      <div
        class="absolute w-[163px] left-0 bottom-[0px] md:left-auto md:bottom-auto md:relative md:w-[326px] md:h-[305px]"
      >
        <Image
          src={left_car}
          format="svg"
          alt={""}
          loading="lazy"
          class="w-full h-full"
        />
      </div>
      <div
        class="flex flex-col gap-2 items-center justify-center w-full p-[15px] md:p-0"
      >
        <h1
          class="text-neutral-900 font-bold text-[32px] text-center lg:text-[48px]"
        >
          Find the <span class="text-[#189DEF]"
            >Best Local Car Washes Near You
          </span>Compare Prices & Reviews
        </h1>
        <p class="text-neutral-900 text-center text-[16px]">
          Discover top-rated car washes near you with real reviews, pricing, and
          photos. Compare features and find the perfect wash today!
        </p>
      </div>
      <div
        class="absolute w-[221px] right-0 bottom-0 md:right-auto md:bottom-auto md:relative md:w-[442px] md:h-[232px] before:content-['']"
      >
        <Image
          src={right_car}
          format="svg"
          alt={""}
          loading="lazy"
          class="w-full h-full"
        />
      </div>
    </div>
  </div>
  <div
    class="flex justify-center w-full h-[237px] md:h-[243px] p-[16px] md:p-0"
  >
    <AutoCompleteSearch client:load />
  </div>
</div>
